<Window x:Class="QrCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QrCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="txt1"/>
        <Button Content="LoadQRcode" Height="30" Width="100"
                Margin="0, 10, 0, 0"
                Background="Green" Foreground="Red"
                Click="Button_Click"></Button>
        <Image x:Name="imgQr" Width="200" Height="100"
               Margin="0 10 0 0" Stretch="Uniform"/>
    </StackPanel>
</Window>
